{
  "version": "0.3.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "publish": "np --no-tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "avdeev-utils",
  "author": "Avdeev Denis inbox@avdeevdenis.com",
  "module": "dist/avdeev-utils.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/avdeevdenis/avdeev-utils",
    "directory": "/"
  },
  "size-limit": [
    {
      "path": "dist/avdeev-utils.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/avdeev-utils.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.4",
    "fs": "^0.0.1-security",
    "husky": "^9.1.4",
    "luxon": "^3.5.0",
    "np": "^10.0.7",
    "npm": "^9.9.3",
    "size-limit": "^11.1.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4"
  }
